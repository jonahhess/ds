package lesson

import (
	"fmt"
	"github.com/jonahhess/ds/internal/types"
)

templ Lesson(userID int, courseID int, lessonIndex int, lesson types.Lesson) {
	<h2>Title: { lesson.Title }</h2>
	<p>Text: { lesson.Text }</p>
	if lesson.QuizID != 0 {
		<a href={ fmt.Sprintf("/users/%d/quizzes/%d", userID, lesson.QuizID) }>Start Quiz</a>
	} else {
		<p>No quiz.</p>
	}
}
