package layouts

import (
	"myapp/components/navbar"
	"myapp/types"
)

templ Base(page string, user types.User, content templ.Component) {
	<!DOCTYPE html>
	<html>
		<head>
			<title>{ page }</title>
			<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
			<link rel="stylesheet" href="static/reset.css"/>
			<script defer type="module" src="static/datastar.js"></script>
			<link rel="stylesheet" href="static/components/navbar/navbar.css"/>
			@PageStyles(page)
		</head>
		<body>
			@components.Navbar(user.UserType)
			@content
		</body>
	</html>
}
